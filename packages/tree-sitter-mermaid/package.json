{
  "name": "tree-sitter-mermaid",
  "version": "0.0.3",
  "description": "Tree-sitter grammar for mermaid.js",
  "repository": "github:monaqa/tree-sitter-mermaid",
  "license": "MIT",
  "author": "monaqa",
  "contributors": ["trongthanh", "bricka", "clentfort"],
  "main": "bindings/node",
  "types": "bindings/node",
  "keywords": ["incremental", "parsing", "tree-sitter", "mermaid"],
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**",
    "*.wasm"
  ],
  "dependencies": {
    "node-addon-api": "^8.1.0",
    "node-gyp-build": "^4.8.2"
  },
  "devDependencies": {
    "prebuildify": "^6.0.1",
    "tree-sitter-cli": "^0.24.2"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.1"
  },
  "peerDependenciesMeta": {
    "tree-sitter": {
      "optional": true
    }
  },
  "scripts": {
    "install": "node-gyp-build",
    "prestart": "tree-sitter build --wasm",
    "start": "tree-sitter playground",
    "test": "node --test bindings/node/*_test.js"
  },
  "tree-sitter": [
    {
      "scope": "source.mermaid",
      "file-types": ["mmd"],
      "injection-regex": "^mermaid|mmd$"
    }
  ]
}
